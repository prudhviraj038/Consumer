<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#00000000"
    android:orientation="vertical">

    <co.unsap.consumer.FontUtilities.CustomTextView
        android:id="@+id/tv_tittle_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Tittle"
        android:textColor="@color/textColor"
        android:textSize="17sp"
        android:visibility="gone"
        app:font_name="RobotoRegular" />


    <co.unsap.consumer.FontUtilities.CustomTextView
        android:id="@+id/tv_message_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Message will display here"
        android:textColor="@color/textColorLight"
        android:textSize="16sp"
        android:visibility="gone"
        app:font_name="RobotoRegular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bottom_button_style"
        android:divider="@drawable/bottom_sheet_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <co.unsap.consumer.FontUtilities.CustomButton
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:clickable="true"
            android:text="Service Now"
            android:textColor="@color/colorbtn"
            android:textSize="18sp"
            app:font_name="RobotoRegular" />

        <co.unsap.consumer.FontUtilities.CustomButton
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:clickable="true"
            android:text="Service Later"
            android:textColor="@color/colorbtn"
            android:textSize="18sp"
            app:font_name="RobotoRegular" />

    </LinearLayout>

    <co.unsap.consumer.FontUtilities.CustomButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_button_style"
        android:clickable="true"
        android:text="Cancel"
        android:textColor="@color/colorbtn"
        android:textSize="18sp"
        app:font_name="RobotoRegular" />

</LinearLayout>
